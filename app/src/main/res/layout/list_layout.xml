<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="true">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_height="60dp"
        android:layout_width="wrap_content"
        android:src="@drawable/artillery"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/unitQuantityTextView"
        android:text="0"
        android:textSize="40sp"
        android:layout_toStartOf="@+id/imagePlusButton"
        android:paddingLeft="20dp"
        android:textColor="#fe0303" />

    <ImageButton
        android:id="@+id/imagePlusButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/plus"
        android:layout_toStartOf="@+id/imageMinusButton"
        android:background="#00000000" />

    <ImageButton
        android:id="@+id/imageMinusButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/minus"
        android:background="#00000000"
        android:layout_alignParentRight="true" />

</RelativeLayout>
